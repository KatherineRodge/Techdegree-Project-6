extends layout.pug

block content
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1= name
        p.lead.text-light
          | #{projectText}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        ul
        each val in tech
          li #{val}

        br
        a.button.expanded(href=`${projectLink}`) Live Demo
        a.button.expanded(href=`${projectGit}`) GitHub Repo

  while count < imgSrc.length
      img.image(src=`${imgSrc[count++]}`)
