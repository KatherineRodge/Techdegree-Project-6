extends layout.pug

block content
  article.grid-container.portfolio-intro
    div
      h1 Welcome to my Site!
      p.lead.text-light
        | Hey perspective employer! Hello and welcome to a showcase of a variety of projects I have completed thus far.
        | If you like what you see and think I would be a good match for you needs, contact me!

  article.grid-container.portfolio-index
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each n in projects
        .cell
          a(href="/project/" + `${n.id}`)
            img.thumbnail(src=`${n.image_urls[0]}`)
            h5 #{n.project_name}
